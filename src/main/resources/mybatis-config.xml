    <typeAliases>
        <typeAlias type="com.log.batch.user.dto.UserDto" alias="UserDto" />
        <typeAlias type="com.log.batch.user.dto.RoleDto" alias="RoleDto" />

        <typeAlias type="com.log.batch.post.dto.PostDto" alias="PostDto" />
        <typeAlias type="com.log.batch.post.dto.PostAttachments" alias="PostAttachmentsDto" />
        <typeAlias type="com.log.batch.post.dto.SearchCondition" alias="SearchCondition" />

        <typeAlias type="com.log.batch.actionlog.dto.PostActionLogDto" alias="PostActionLogDto" />
        <typeAlias type="com.log.batch.actionlog.dto.PostActionLogDailyStatusDto" alias="PostActionLogDailyStatusDto" />

    </typeAliases>

    <mappers>
        <mapper resource="com/log/batch/mapper/user/UserMapper.xml" />

        <mapper resource="com/log/batch/mapper/post/PostMapper.xml" />
        <mapper resource="com/log/batch/mapper/actionlog/PostActionLogMapper.xml" />
        <mapper resource="com/log/batch/mapper/actionlog/PostActionLogBatchMapper.xml" />
    </mappers>

