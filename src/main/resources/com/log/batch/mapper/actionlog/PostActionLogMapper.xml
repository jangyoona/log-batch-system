<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.log.batch.actionlog.mapper.PostActionLogMapper">

    <insert id="insertPostActionLog" parameterType="PostActionLogDto">
        INSERT INTO post_action_log (
            post_id,
            user_id,
            action_type,
            ip_address,
            user_agent
        ) VALUES (
            #{postId},
            #{userId},
            #{actionType},
            #{ipAddress},
            #{userAgent}
        )
    </insert>

</mapper>