<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.batch.user.mapper.PostMapper">

    <resultMap id="postResultMap" type="PostDto">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="active" column="active"/>
    </resultMap>

    <select id="getPostCount" parameterType="SearchCondition" resultType="int">
        SELECT
            COUNT(*)
        FROM
            posts
        WHERE
            1=1
            AND active = true
            <if test="keyword != null and keyword != ''">
                AND (
                    title LIKE CONCAT('%', #{keyword}, '%')
                    OR user_name LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
    </select>

    <select id="getPosts" parameterType="SearchCondition" resultMap="postResultMap">
        SELECT
            id,
            user_id,
            user_name,
            title,
            content,
            created_at,
            active
        FROM
            posts
        WHERE
            1=1
            AND active = true
            <if test="keyword != null and keyword != ''">
                AND (
                    title LIKE CONCAT('%', #{keyword}, '%')
                    OR user_name LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
        <choose>
            <when test="sort != null and sort == 'recent'">
                ORDER BY created_at DESC
            </when>
            <when test="sort != null and sort == 'oldest'">
                ORDER BY created_at ASC
            </when>
            <otherwise>
                ORDER BY created_at DESC
            </otherwise>
        </choose>
        LIMIT #{size} OFFSET #{offset}
    </select>

    <select id="getPostById" parameterType="long" resultMap="postResultMap">
        SELECT
            id,
            user_id,
            user_name,
            title,
            content,
            created_at,
            active
        FROM
            posts
        WHERE
            id = #{id}
            AND active = true
    </select>

    <insert id="insertPost" parameterType="PostDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO posts (user_id, user_name, title, content)
        VALUES (#{userId}, #{userName}, #{title}, #{content})
    </insert>

    <insert id="insertPostAttachments" parameterType="PostAttachmentsDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO post_attachments (post_id, origin_name, stored_name)
        VALUES (#{postId}, #{originName}, #{storedName})
    </insert>

    <update id="updatePost" parameterType="PostDto">
        UPDATE posts
        SET
            title = #{title},
            content = #{content},
            active = #{active}
        WHERE
            id = #{id}
    </update>

    <delete id="deletePost" parameterType="long">
        UPDATE posts
        SET
            active = false
        WHERE
            id = #{id}
    </delete>

</mapper>