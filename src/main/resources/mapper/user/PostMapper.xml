<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.batch.user.mapper.PostMapper">

    <select id="getPosts" parameterType="String" resultType="Boolean">
        SELECT EXISTS (
        SELECT 1
        FROM user
        WHERE user_name = #{ userName }
        )
    </select>

</mapper>